alias ygu='yg upgrade'                               # Upgrade global yarn packages
alias yr='yarn run'                                  # Run yarn script
alias yst='yr start'                                 # Run start script
alias yd='yr dev'                                    # Run dev script
alias ys='yr serve'                                  # Run serve script
