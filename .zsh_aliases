# Navigation and file management
alias ..='cd ..'                                     # Go up one directory
alias c='clear && ll'                                # Clear terminal and list files
alias clfile='_clearfile'                            # Clear/empty a file (custom function)
alias deldir='_deldir'                               # Delete a directory (custom function)
alias delfile='_delfile'                             # Delete a file (custom function)
alias exp='explorer.exe .'			     # Open current folder at Windows File Explorer
alias gen='_gen'                                     # Generate files/templates (custom function)
alias h='history -20'                                # Show last 20 commands from history
alias hgrep='history | grep $1'                      # Search command history for pattern
alias home='clear && cd $HOME'                 	     # Clear terminal and go to home directory
alias dock='cd $HOME/.zsh/docker_local'              # Go to local docker directory
alias proj='cd $HOME/projects'                       # Go to projects directory
alias ll='_dynamic_view'                             # List files with dynamic view (custom function)
alias link='ln -s'                                   # Create symbolic link
alias md='_makedir'                                  # Make directory (custom function)
alias note='notepad.exe'                             # Open file in Notepad (app spesific OS)
alias src='source $HOME/.zshrc'                      # Reload zsh configuration
alias t='tail -f'                                    # Follow file contents (tail -f)
alias tsys='tail -f /var/log/syslog'                 # Follow system log file
alias untar='tar -zxvf'                              # Extract tar.gz files
alias ver='_versions'                                # Show version info (custom function)
alias vc.='code .'                                   # Open current directory in VS Code
alias vc='code "$1"'                                 # Open specific file/directory in VS Code
alias wslupd='sudo apt update && sudo apt upgrade -y && brew update && brew upgrade'  # Update WSL system and brew packages

# git
alias gadd='git add .'                               # Stage all changes
alias gb='git branch'                                # List git branches
alias gba='_fzf_git_branch'                          # Interactive branch selection with fzf (custom function)
alias gco='git checkout'                             # Switch branches or restore files
alias gcb='git checkout -b'                          # Create and switch to new branch
alias gcm='git commit -m'                            # Commit with message
alias gd='git diff'                                  # Show differences between commits/files
alias gl='git log --oneline'                         # Show commit history in one line format
alias gld='git log --oneline --graph --decorate'     # Show commit history with graph and decorations
alias gm='git merge'                                 # Merge branches
alias gmff='git merge --ff-only'                     # Merge with fast-forward only
alias gp='git push'                                  # Push commits to remote
alias gpd='git push --dry-run'                       # Dry run push (show what would be pushed)
alias gpo='git push -u origin'                       # Push and set upstream origin
alias gpull='git pull'                               # Pull changes from remote
alias gpnew='_git_push_new'                          # Push new branch (custom function)
alias grem='git remote -v'                           # Show remote repositories
alias gst='git status'                               # Show working tree status
alias gsi='git submodule init'                       # Initialize git submodules
alias gss='git submodule sync'                       # Sync git submodules
alias gsu='git submodule update'                     # Update git submodules
alias gstall='git stash --all'                       # Stash all changes including untracked files

# docker
alias dcu='docker compose up -d'                     # Start docker compose services in background
alias dcd='docker compose down'                      # Stop and remove docker compose services
alias dim='docker images'                            # List docker images
alias dps='docker ps'                                # List running containers
alias dpush='docker push'                            # Push docker image to registry
alias dpull='docker pull'                            # Pull docker image from registry
alias dps='docker ps'                                # List running containers (duplicate)
alias dpsa='docker ps -a'                            # List all containers (running and stopped)
alias dsp='docker system prune --all'                # Remove all unused docker objects
alias dv='docker volume ls'                          # List docker volumes
alias dvp='docker volume prune -f'                   # Remove unused docker volumes
alias dx='docker exec -it'                           # Execute interactive command in container
alias dmysql='_docker_run_mysql'                     # Run MySQL in docker (custom function)
alias dpostgresql='_docker_run_postgresql'           # Run PostgreSQL in docker (custom function)

# npm
alias n='npm'                                        # Short npm command
alias ni='npm i'                                     # Install npm packages
alias nun='npm uninstall'                            # Uninstall npm packages
alias nung='nun -g'                                  # Uninstall global npm packages
alias nls='npm ls'                                   # List installed npm packages
alias nlsg='nls -g'                                  # List global npm packages
alias nr='npm run'                                   # Run npm script
alias nrd='npm run dev'                              # Run development script
alias nst='nr start'                                 # Run start script
alias nd='nr dev'                                    # Run dev script
alias nse='nr serve'                                 # Run serve script
alias nb='nr build'                                  # Run build script
alias nt='nr test'                                   # Run test script
alias nl='nr lint'                                   # Run lint script
alias nig='ni -g'                                    # Install global npm package
alias nid='ni -D'                                    # Install npm package as dev dependency
alias nigd='ni -gD'                                  # Install global npm package as dev dependency
alias nup='npm update'                               # Update npm packages
alias nug='nu -g'                                    # Update global npm packages
alias ncl='rm -rf ./node_modules'                    # Remove node_modules directory

